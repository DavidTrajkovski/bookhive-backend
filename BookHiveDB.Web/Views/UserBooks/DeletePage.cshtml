@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BookHiveDB.Domain.DomainModels.UserBook
@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to remove this book from my books?</h3>
<div>
    <hr />

    <form asp-action="DeleteConfirmed" asp-controller="UserBooks">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="submit" value="Remove" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary ml-1">Back to List</a>
    </form>
</div>
