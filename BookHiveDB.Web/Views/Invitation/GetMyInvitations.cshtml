@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<BookHiveDB.Domain.Models.Invitation>

@{
    ViewData["Title"] = "Invitations";
}

<div class="container">
    @if (Model.Count() != 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">From</th>
                    <th scope="col">Book Club</th>
                    <th scope="col">Message</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inv in Model)
                {
                    <tr>
                        <td>@inv.UserSender.Email</td>
                        <td>@inv.BookClub.name</td>
                        <td>@inv.Message</td>
                        <td colspan="2">
                            <form class="d-inline-block" method="post" asp-action="AcceptInvitation" asp-route-id="@inv.Id">
                                <button class="btn btn-success" type="submit">Accept</button>
                            </form>
                            <form class="d-inline-block" method="post" asp-action="DeclineInvitation" asp-route-id="@inv.Id">
                                <button class="btn btn-danger" type="submit">Decline</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    @if (Model.Count() == 0)
    {
        <h1 style="font-size: 80px; color: darkslategrey;">No new invitations :(</h1>
    }
</div>