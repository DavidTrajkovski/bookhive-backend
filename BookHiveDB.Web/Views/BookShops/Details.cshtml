@model BookHiveDB.Domain.DomainModels.BookShop

@{
    ViewData["Title"] = "Details";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
<link rel="stylesheet" href="~/css/site.css"/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


<head>
    <meta charset="UTF-8">
    <title>Book Shop</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #FC766A;
            font-family: 'IBM Plex Sans', sans-serif;
            font-size: 30px;
        }

        li {
            font-family: 'Oswald', sans-serif;
        }

        h1 {
            font-family: 'Oswald', sans-serif;
        }

        #container {
            display: flex;
            justify-content: space-between;
            width: 80%;
            margin: 40px auto auto;
        }

        #middle {
            width: 80%;
            margin: 40px auto auto;
        }

        #books {
            width: 80%;
            margin: 40px auto auto;
        }

        .button {
            background-color: #2f4f4f;
            padding: 10px;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            font-family: 'Oswald', sans-serif;
        }

            .button:hover {
                color: lightgray;
                background-color: #3f5f5f;
            }
    </style>
</head>
<body>
<div id="container">
    <div id="left">
        <h1>@Model.name</h1>
        <h4 style="margin-bottom: 0; margin-top: 10px;">@Model.city</h4>
        <h4 style="margin-bottom: 0; margin-top: 10px;">@Model.address</h4>
        <h4 style="margin-bottom: 0; margin-top: 10px;">@Model.bookshopEmail</h4>
        <h4 style="margin-bottom: 0; margin-top: 10px;">@Model.phoneNumber</h4>
    </div>
    <div id="right">
        <img alt="Image URL" id="avatar" src="/bookstore_1.png" height="400" width="400"/>
    </div>
</div>

@*<div id="middle"><p>Grade: </p><span>@Model.grade</span><span> by @Model.numGraders graders.</span></div>*@

@if (Model.BookInBookShops.Count() > 0)
{
    <div id="books">
        <h2 style="text-align: center; margin-bottom: 0;">Books you can find in this bookshop:</h2>
        <div style="display: flex; justify-content: center; margin-top: 0;">
            <ul>
                @foreach (var bookinbookshop in Model.BookInBookShops)
                {
                    <a style="text-decoration: none; color: darkslategray" href="/books/details/@bookinbookshop.Book.Id">
                        <li>@bookinbookshop.Book.name</li>
                    </a>
                }
            </ul>
        </div>
    </div>
}


<div style="margin-left: 140px; margin-bottom: 20px">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

</body>
</html>