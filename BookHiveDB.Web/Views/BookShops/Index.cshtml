@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BookHiveDB.Domain.Models.BookShop>

@{
    ViewData["Title"] = "Index";
}

@if (User.IsInRole("Administrator"))
{
    <a href="/bookshops/create" class="btn text-white"
       style="background-color: #008C76;">
        Add a Bookshop
    </a>
}
    <div class="w-50 my-4 mx-auto" id="searchCont">
        <form method="post" action="/bookshops/search">
            <input type="text" class="form-control" placeholder="Enter a bookshop name..." name="search">
            <button class="btn btn-dark w-100 mt-2" type="submit"><i class="fa fa-search"></i>Search</button>
        </form>
    </div>
    <div class="container" id="c2">
        @foreach (var bookshop in Model)
        {
        <div class="row">
            <div class="card mb-3 mx-auto" style="max-width: 540px; ">
                <div class="row">
                    <div class="col-md-4 d-flex align-items-center">
                        <img src="/bookstore_1.png"
                             alt="Bookshop_Image"
                             class="h-75 img-fluid ms-3" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@bookshop.name</h5>
                            <p class="card-text">@bookshop.address</p>
                            <p class="card-text">@bookshop.phoneNumber</p>
                            <p class="card-text">@bookshop.bookshopEmail</p>
                            <p class="card-text">
                                <a href="@bookshop.websiteLink" class="link-info" style="text-decoration: none;color: black !important;">Website link</a>
                            </p>
                                <a href="/bookshops/details/@bookshop.Id" class="btn btn-danger">View details</a>
                                @if (User.IsInRole("Administrator"))
                                {
                                <a href="/bookshops/edit/@bookshop.Id" class="btn btn-danger">Edit</a>
                                <a href="/bookshops/delete/@bookshop.Id" class="btn btn-danger">Delete</a>
                                }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>