@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] - BookHiveDB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Our Custom CSS -->
    <link rel="stylesheet" href="/style.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka&display=swap" rel="stylesheet">

    <!-- Font Awesome JS -->
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/solid.js"
            integrity="sha384-tzzSw1/Vo+0N5UhStP3bvwWPq+uvzCMfrN1fEFe+xBmv1C/AtVX5K0uZtmcHitFZ"
            crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js"
            integrity="sha384-6OIrr52G08NpOFSZdxxz1xdNSndlD4vdcf/q2myIUVO0VsqaGHJsB0RaBE01VTOY"
            crossorigin="anonymous"></script>

    <style>
        @@import "https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700";
        body {
            font-family: 'Poppins', sans-serif;
            background: #fafafa;
        }

        p {
            font-family: 'Poppins', sans-serif;
            font-size: 1em;
            line-height: 1.7em;
        }

        #naslov {
            padding-top: 15px;
            font-family: 'Fredoka', sans-serif;
        }

        #navbarSupportedContent ul li a:hover {
            color: #FC766A;
        }

        #myProfile {
            color: #008C76;
            font-size: 20px;
        }

        #topbar {
            margin-top: -20px;
            margin-left: -20px;
            margin-right: -20px;
        }

        #logout {
            position: absolute;
            padding-left: 10px;
            padding-bottom: 7px;
            bottom: 0;
            font-size: 17px;
        }

        #sidebar a:hover {
            color: #FC766A;
        }

        a,
        a:hover,
        a:focus {
            color: inherit;
            text-decoration: none;
            transition: all 0.3s;
        }

        .navbar {
            padding: 20px 10px;
            background: #fff;
            border: none;
            border-radius: 0;
            margin-bottom: 40px;
            box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
        }

        .navbar-btn {
            box-shadow: none;
            outline: none !important;
            border: none;
        }

        .line {
            width: 100%;
            height: 1px;
            border-bottom: 1px dashed #ddd;
            margin: 40px 0;
        }

        /* ---------------------------------------------------
            SIDEBAR STYLE
        ----------------------------------------------------- */

        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        #sidebar {
            min-width: 230px;
            max-width: 230px;
            background-color: #008C76;
            color: #fff;
            transition: all 0.3s;
        }

        #sidebarCollapse {
            background-color: #008C76;
        }

        #sidebar.active {
            margin-left: -230px;
        }

        #sidebar .sidebar-header {
            padding-top: 15px;
            padding-bottom: 15px;
            padding-left: 10px;
            background-color: #008C76;
        }

        body {
            background-color: #9ED9CC;
        }

        #sidebar ul p {
            color: #fff;
            padding: 10px;
        }

        #sidebar ul li a {
            padding: 10px;
            font-size: 1.1em;
            display: block;
        }

        #sidebar ul li a:hover {
            color: #008C76;
            background: #fff;
        }

        #sidebar ul li.active>a,
        a[aria-expanded="true"] {
            color: #008C76;
            background: #fff;
        }

        a[data-toggle="collapse"] {
            position: relative;
        }

        .dropdown-toggle::after {
            display: block;
            position: absolute;
            top: 50%;
            right: 20px;
            transform: translateY(-50%);
        }

        ul ul a {
            font-size: 0.9em !important;
            padding-left: 30px !important;
            background: #6d7fcc;
        }

        ul.CTAs {
            padding: 20px;
        }

        ul.CTAs a {
            text-align: center;
            font-size: 0.9em !important;
            display: block;
            border-radius: 5px;
            margin-bottom: 5px;
        }

        a.download {
            background: #fff;
            color: #7386D5;
        }

        a.article,
        a.article:hover {
            background: #6d7fcc !important;
            color: #fff !important;
        }

        /* ---------------------------------------------------
            CONTENT STYLE
        ----------------------------------------------------- */

        #content {
            width: 100%;
            padding: 20px;
            min-height: 100vh;
            transition: all 0.3s;
        }

        /* ---------------------------------------------------
            MEDIAQUERIES
        ----------------------------------------------------- */

        @@media (max-width: 768px) {
            #sidebar {
                margin-left: -230px;
            }
            #sidebar.active {
                margin-left: 0;
            }
            #sidebarCollapse span {
                display: none;
            }
        }

        /* -----------------------------------
                    FOOOTER
        ------------------------------------ */

        .naslovi {
            margin-bottom: -1%;
            color: #FC766A;
        }
        footer {
            background-color: #9ED9CC;
        }

        .selected{
            color: #008C76;
            background: #ddd;
        }
    </style>
</head>
<body>

    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3 id="naslov">Bookhive</h3>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="/user">Home</a>
                </li>
                @if (User.IsInRole("StandardUser"))
                {
                    <li>
                        <a asp-controller="UserBooks" asp-action="Index">My Books</a>
                    </li>
                }
                @if (User.IsInRole("StandardUser"))
                {
                    <li>
                        <a asp-controller="User" asp-action="GetMyBookClubs">My Book Clubs</a>
                    </li>
                }
                @if (User.IsInRole("StandardUser"))
                {
                    <li>
                        <a asp-controller="User" asp-action="GetMyWishList">My Wishlist</a>
                    </li>
                }
                @if (User.IsInRole("StandardUser"))
                {
                    <li>
                        <a asp-controller="Order" asp-action="Index">My Orders</a>
                    </li>
                }
                @if (User.IsInRole("Administrator"))
                {
                    <li>
                        <a asp-controller="Order" asp-action="Index">All Orders</a>
                    </li>
                }
                <li>
                    <a asp-controller="Authors" asp-action="Index">Authors</a>
                </li>
                <li>
                    <a asp-controller="Books" asp-action="Index">Books</a>
                </li>
                @if (User.IsInRole("StandardUser"))
                {
                    <li>
                        <a asp-controller="BookClub" asp-action="Index">Book Clubs</a>
                    </li>
                }
                @if (User.IsInRole("StandardUser") || User.IsInRole("Administrator"))
                {
                    <li>
                        <a asp-controller="Invitation" asp-action="GetMyInvitations" class="position-relative">
                            Invitations
                        </a>
                    </li>
                }
                <li>
                    <a href="/bookshops">Bookshops</a>
                </li>

                @if (User.IsInRole("Administrator"))
                {
                    <li>
                        <a href="https://localhost:44321/User/ImportUsers">Import Users</a>
                    </li>
                }
            </ul>
            @if (User.IsInRole("StandardUser") || User.IsInRole("Administrator"))
            {
                <div id="logout" style="position: fixed;">
                    <a href="/account/logout">Logout</a>
                </div>
            }
            </nav>

        <!-- Page Content  -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light" id="topbar">
                <div class="container-fluid ">
                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span></span>
                    </button>
                    @if (User.IsInRole("Administrator") || User.IsInRole("StandardUser"))
                    {
                        <div sec:authorize="hasAnyRole('ROLE_ADMIN','ROLE_USER')" id="navbarSupportedContent">
                            <ul class="nav navbar-nav ml-auto">
                                <li class="nav-item active">
                                    @*<a class="nav-link" href="/account/profile" id="myProfile">My profile</a>*@
                                    @if (User.IsInRole("StandardUser"))
                                    {
                                        <a style="padding: 0; display: inline-block" class="nav-link" href="/shoppingcart" id="myProfile"><img height="65" src="/shopping_cart.png" /></a>

                                    }
                                    <a style="padding: 0; margin-left: 15px; display: inline-block" class="nav-link" href="/account/profile" id="myProfile"><img height="55" src="/profile_icon.png" /></a>
                                </li>
                            </ul>
                        </div>
                    }
                    </div>
            </nav>
            <div class="container">
                <main role="main" class="pb-3">
                    <!-- Body Content -->
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    @*    <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - BookHiveDB.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)*@
