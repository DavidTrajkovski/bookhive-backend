@model BookHiveDB.Domain.DomainModels.Book

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to remove this book from your wishlist?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
    </dl>

    <form asp-controller="User" asp-action="RemoveBookFromMyWishList" asp-route-bookId="@Model.Id">
        <input type="hidden" />
        <input type="submit" value="Remove" class="btn btn-danger" />
        <a asp-controller="User" asp-action="GetMyWishList" class="btn btn-primary ml-1">Back to List</a>
    </form>
</div>
