@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BookHiveDB.Domain.Dtos.Mvc.BookClubInvitations

@{
    ViewData["Title"] = "Member Requests";
}

<div class="container">
    <div class="row">
        <h3>@Model.BookClub.name</h3>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">From</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Invitations)
            {
                <tr>
                    <td>@item.UserSender.Email</td>
                    <td colspan="2">
                        <form class="d-inline-block"
                              asp-controller="Invitation" asp-action="AcceptRequest" asp-route-id="@item.Id">
                            <button class="btn btn-success" type="submit">Accept</button>
                        </form>
                        <form class="d-inline-block"
                              asp-controller="Invitation" asp-action="Delete" asp-route-id="@item.Id">
                            <button class="btn btn-danger" type="submit">Decline</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="Details" asp-route-id="@Model.BookClub.Id" class="btn btn-primary">Back to List</a>
    </div>
</div>